# parse commandline arguments

action=
device=

if ! options=$(getopt -o a:d: -l action: -l device: -- "$@")
then
  exit 1
fi

echo $options
set -- $options

while [ $# -gt 0 ]
do
  case $1 in
    -a|--action) action="$2" ; shift 2 ;;
    -d|--device) device="$2" ; shift 2 ;;
    (--) shift ; break ;;
    (*) break ;;
  esac
done

