description     "XBMC Daemon"
author          "Steffen Barszus <steffenbpunkt@gmail.com>"

env DISPLAY=:1
export DISPLAY

env HOME=/var/lib/vdr
export HOME

setuid vdr
setgid vdr

<?cs if:(vdr.frontend == "xbmc") ?>
start on vdr-frontend-restart
stop on stopping vdr or stopping openbox
nice -10
<?cs /if ?>
